<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.luochang.extracurricular.LoginActivity">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            app:layout_widthPercent="60%"
            android:layout_height="0dp"
            app:layout_heightPercent="40%"
            android:src="@mipmap/ic_launcher"
            android:background="@color/colorPrimary"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:text="课外活动"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/ed_userName"
                android:drawableLeft="@mipmap/user1"
                android:drawableStart="@mipmap/user1"
                android:hint="请输入账号"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textCursorDrawable="@null"
                />
            <EditText
                android:id="@+id/ed_passWord"
                android:drawableLeft="@mipmap/lock1"
                android:drawableStart="@mipmap/lock1"
                android:hint="请输入密码"
                android:drawablePadding="10dp"
                android:layout_margin="5dp"
                android:singleLine="true"
                android:password="true"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_losword"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_gravity="end"
                android:text="忘记密码?"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_login"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:text="登录"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

</com.zhy.android.percent.support.PercentLinearLayout>
