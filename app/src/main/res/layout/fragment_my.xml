<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        app:layout_heightPercent="32%"
        android:background="@color/gray"
        android:orientation="vertical"
        android:layout_height="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/set2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="0dp" />

            <ImageView
                android:src="@mipmap/mesg"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_touxiang"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/tv_login"
            android:layout_marginTop="10dp"
            android:text="点我登录"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <RelativeLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView

                android:gravity="center_vertical"
                android:id="@+id/tv_paiming"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="35dp"
                android:text="我的排名"
                android:textSize="@dimen/sp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <View
                android:id="@+id/line"
                android:layout_centerInParent="true"

                android:background="@color/white"
                android:layout_width="1dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="35dp"
                android:layout_toRightOf="@+id/line"
                android:text="我的积分"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>



    </com.zhy.android.percent.support.PercentLinearLayout>


    <LinearLayout
        android:id="@+id/ll_myjianli"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:layout_heightPercent="10%"
        android:layout_height="0dp">





        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="我的简历"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp" />


        <ImageView
            android:layout_marginRight="20dp"
            android:src="@mipmap/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:id="@+id/ll_myhuodong"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:layout_heightPercent="10%"
        android:layout_height="0dp">





        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="我的活动"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp" />


        <ImageView
            android:layout_marginRight="20dp"
            android:src="@mipmap/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />
    <LinearLayout
        android:id="@+id/ll_myshoucang"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:layout_heightPercent="10%"
        android:layout_height="0dp">





        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="我的收藏"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp" />


        <ImageView
            android:layout_marginRight="20dp"
            android:src="@mipmap/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <View
        android:layout_width="match_parent"
        app:layout_heightPercent="15%"
        android:layout_height="0dp" />
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

    <LinearLayout
        android:id="@+id/ll_myyijian"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:layout_heightPercent="10%"
        android:layout_height="0dp">





        <TextView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="意见反馈"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <View
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp" />


        <ImageView
            android:layout_marginRight="20dp"
            android:src="@mipmap/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />




</com.zhy.android.percent.support.PercentLinearLayout>