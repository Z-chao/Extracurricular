<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/tv_yiji"
        android:text="活动名称"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />
    <TextView
        android:layout_marginTop="50dp"
        android:text="活动名称"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/tv_yiji"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_alignBaseline="@+id/tv_yiji"
        android:id="@+id/tv_erji1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="50dp"
        android:text="活动名称"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/tv_erji1"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_alignBaseline="@+id/tv_erji1"
        android:id="@+id/tv_erji2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



        <TextView
            android:id="@+id/tv_erji3"
            android:layout_below="@+id/tv_erji1"
            android:layout="@+id/tv_erji1"
            android:layout_alignLeft="@+id/tv_erji1"
            android:text="活动名称"
            android:textSize="13sp"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    <TextView
        android:id="@+id/tv_erji4"
        android:layout_below="@+id/tv_erji2"
        android:layout="@+id/tv_erji1"
        android:layout_alignLeft="@+id/tv_erji2"
        android:text="活动名称"
        android:textSize="13sp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />






</RelativeLayout>