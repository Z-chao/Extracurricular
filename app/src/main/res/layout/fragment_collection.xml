<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

<LinearLayout
    android:orientation="vertical"
    app:layout_heightPercent="30%"
    android:background="@color/colorAccent"
    android:layout_width="match_parent"
    android:layout_height="0dp">
    <ImageView
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="许桐 01022013001"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
    <RelativeLayout

        app:layout_heightPercent="20%"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_collimg"
            android:layout_alignParentLeft="true"
            android:src="@drawable/lanqiu"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_coll"
            android:gravity="center"
            android:layout_toRightOf="@+id/iv_collimg"
            android:text="篮球俱乐部"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true"
            android:textColor="@color/black_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/iv_didian"
            android:layout_width="15dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_collimg"
            android:layout_alignLeft="@+id/tv_coll"
            android:layout_marginLeft="50dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/tv_didian"
            android:layout_toRightOf="@+id/iv_didian"
            android:text="北操场"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/iv_renshu"
            android:layout_width="15dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tv_didian"
            android:layout_marginLeft="80dp"
            android:layout_height="15dp" />

        <TextView
            android:layout_toRightOf="@+id/iv_renshu"
            android:text="150"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </RelativeLayout>
    <RelativeLayout

        app:layout_heightPercent="20%"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_collimg1"
            android:layout_alignParentLeft="true"
            android:src="@drawable/yueye"
            android:layout_width="100dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/tv_coll1"
            android:gravity="center"
            android:layout_toRightOf="@+id/iv_collimg1"
            android:text="定向越野俱乐部"
            android:textSize="18sp"
            android:layout_marginTop="30dp"
            android:layout_centerInParent="true"
            android:textColor="@color/black_overlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/iv_didian1"
            android:layout_width="15dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/iv_collimg1"
            android:layout_alignLeft="@+id/tv_coll1"
            android:layout_marginLeft="50dp"
            android:layout_height="15dp" />

        <TextView
            android:id="@+id/tv_didian1"
            android:layout_toRightOf="@+id/iv_didian1"
            android:text="北操场"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <ImageView
            android:src="@mipmap/ic_launcher"
            android:id="@+id/iv_renshu1"
            android:layout_width="15dp"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/tv_didian1"
            android:layout_marginLeft="80dp"
            android:layout_height="15dp" />

        <TextView
            android:layout_toRightOf="@+id/iv_renshu1"
            android:text="150"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




    </RelativeLayout>



</com.zhy.android.percent.support.PercentLinearLayout>